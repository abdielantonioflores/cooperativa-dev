<!DOCTYPE html>
<html lang="en">
<% include ./partials/head %>

<body class="ng-cloak" ng-app="startAPP">
    <% include ./partials/header %>
    <!--CONTENIDO-->
    <div id="main-container" ng-controller="productorController">
        <!--MENU LEFT-->
        <div id="main-content" class="main-content container-fluid">
            <div class="filler filler"></div>
            <div id="page-content" class="page-content">
                <!--FILTRO-->
                <section>
                    <div class="page-header">
                        <small>Observacion: La opcion de filtro solo acepta dos parametros para la busqueda</small>
                        <!-- <h3 class="heading-icon" data-icon="&#xe11b;" aria-hidden="true">Productor</h3> -->
                    </div>
                    <div class="form-inline">
                        <div class="controls controls-row">
                            <select class="span5 v1" tabindex="-1" ng-model="projectSelected" ng-change="addValueFilter(projectSelected,'v1')">
                                <option value="" selected disabled>Proyecto</option>
                                <option value="{{proyecto.name}}" ng-repeat="proyecto in project[0]">{{proyecto.name}}</option>
                            </select>
                            <input class="span3 v2" type="text" placeholder="Numero de Socio" ng-model="socioNum" ng-blur="addValueFilter(socioNum,'v2')">
                            <input class="span3 v3" type="text" placeholder="Numero de Cedula" ng-model="cedulaNum" ng-blur="addValueFilter(cedulaNum,'v3')">
                            <div class="span3">
                                <button type="button" class="btn btn-sm btn-primary" ng-click="filter(v1,type)"><i
                                        class="material-icons"></i>FILTRO</button>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid" ng-show="showInfo">
                        <div class="span12">
                            <table id="tablePT"
                                class="table table-striped table-content table-condensed boo-table table-hover bg-blue-light">
                                <caption>
                                    Default Table Caption - Title for table <span>Here text in span</span>
                                </caption>
                                <thead>
                                    <tr>
                                        <th scope="col">ID <span class="column-sorter"></span></th>
                                        <th scope="col">Name <span class="column-sorter"></span></th>
                                        <th scope="col">Projecto <span class="column-sorter"></span></th>
                                        <th scope="col">Rubro <span class="column-sorter"></span></th>
                                        <th scope="col">Telefono<span class="column-sorter"></span></th>
                                        <th scope="col">Direccion<span class="column-sorter"></span></th>
                                        <th scope="col">Status<span class="column-sorter"></span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="info in filterInfo track by $index">
                                        <td>{{info.prefix}}</td>
                                        <td>{{info.name}}</td>
                                        <td>{{info.project[0].name}}</td>
                                        <td></td>
                                        <td>{{info.address}}</td>
                                        <td>{{status}}</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                            <!-- // DATATABLE Base - DT -->

                        </div>
                        <!-- // Column -->

                    </div>
                    <!-- // Example row -->
                </section>
            </div>
        </div>
    </div>
    <% include ./partials/script %>
    <script src="plugin/alertify/alertify.min.js"></script>
    <script src="plugin/pl-form/select2/js/select2.js"></script>
    <script src="./js/app/productor.js"></script>
    <script src="./controller/productorController.js"></script>
</body>

</html>