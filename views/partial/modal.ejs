<!--========== Third Modal ==========-->
<!-- Modal -->
<div class="modal fade" id="products" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
       <div class="modal-content">
          <div class="modal-header modal-header-primary">
             <button type="button" class="close" data-dismiss="modal" aria-hidden="true">  Ã—  </button>
             <h4>PRODUCTOS</h4>
          </div>
          <div class="modal-body" ng-controller="invoiceController">
             <div class="col-md-12">
                <div class="table-responsive">
                   <form action="" method="" name="">
                      <table class="table table-condensed">
                         <thead>
                            <tr>
                               <th>Product</th>
                               <th>Quantity</th>
                            </tr>
                         </thead>
                         <tbody>
                            <tr>
                               <td class='modalProduct'>
                                  <div class="delete-wpr">
                                      <select class="selectpicker" data-live-search="true" ng-model="productSelected" ng-change="qtyIni(index,1)">
                                            <option value="" disabled>Seleccione un producto</option>
                                            <option ng-repeat="producto in product">{{producto.name}}</option>
                                      </select>    
                                </div>
                               </td>
                               <td>
                                  <input type="text" class="qtyNumberModel"  ng-model="qty"  ng-change="qtyIni(index,qty)" value="{{qtyInit}}"/>
                               </td>
                              
                            </tr>
                         </tbody>
                      </table>
                      <div class="button-group">
                      <button type="button" class="btn btn-primary pull-right"  ng-click="addItem(productSelected,qtyInit)" data-dismiss="modal">Save</button>
                      </div>
                     
                   </form>
                </div>
             </div>
             <!-- ends col-12 -->
          </div>
          <div class="clearfix"></div>
       </div>
       <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
 </div>
 <!-- /.modal -->